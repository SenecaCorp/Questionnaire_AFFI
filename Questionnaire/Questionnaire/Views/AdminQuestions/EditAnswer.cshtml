@model Questionnaire.Entities.Answer

@{
    ViewBag.Title = "EditAnswer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="container-fluid">
    <div class="row">
        <div class="span10">
            @using (Html.BeginForm()) {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend>Answer #@Model.Index for Question #@Model.QuestionId</legend>

                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.Index)
                    @Html.HiddenFor(model => model.QuestionId)
                    @Html.HiddenFor(model => model.IsSelected)

                    <h5>Answer text</h5>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.Title, new { @class = "span6"})
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>

                    <h5>Comment</h5>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.Comment, new { @class = "span9", rows = 20 })
                        @Html.ValidationMessageFor(model => model.Comment)
                    </div>

                    <h5>Answer weight</h5>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Value)
                        @Html.ValidationMessageFor(model => model.Value)
                    </div>

                    <div class="row-fluid">
                        <div class="span3">
                            <input type="submit" value="Save" class="btn btn-success"/>
                            <button class="btn" onclick="@Url.Action("Back to List", "Edit", new { id = Model.QuestionId })">Back to list</button>
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>