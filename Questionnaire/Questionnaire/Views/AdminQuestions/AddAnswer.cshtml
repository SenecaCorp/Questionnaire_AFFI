@model Questionnaire.Entities.Answer

@{
    ViewBag.Title = "Add Answer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="container-fluid">
    <div class="row">
        <div class="span10">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Add Answer</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.QuestionId)
        @Html.HiddenFor(model => model.IsSelected)
        @Html.HiddenFor(model => model.Index)

        <h5>Answer Title</h5>
        <div class="editor-field error" >
            @Html.TextAreaFor(model => model.Title, new { @class = "span6"})
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <h5>Comment</h5>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Comment, new { @class = "span9", rows = 20 })
            @Html.ValidationMessageFor(model => model.Comment)
        </div>

        <h5>Answer weight</h5>
        <div class="editor-field">
            @Html.EditorFor(model => model.Value)
            @Html.ValidationMessageFor(model => model.Value)
        </div>
        
        <div class="row-fluid">
            <div class="span3">
                <input type="submit" value="Create" class="btn btn-success"/>
                <a class="btn" href="./Edit/@Model.QuestionId">Back to list</a>
            </div>
        </div>

    </fieldset>
}
</div>
</div>
</div>
