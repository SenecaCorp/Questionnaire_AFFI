@model IEnumerable<QuestionnairePrototype.Models.Vendors.VendorEmailStatisticEntry>

@{
    ViewBag.Title = "Statistics";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-fluid">
    <div class="row">
        <div class="span5">
            @if (Model.Count() != 0)
            {
                <h4>Statistics for @Model.First().Vendor.Name</h4>
            }
            else
            {
                <h4>No statistics to display</h4>
            }
        </div>
        <div class="span11">
        @if (Model.Count() != 0)
        {
            
        @Html.ActionLink("Export to Excel", "ExportStatistics", new { id = Model.First().Vendor.Id }, new { @class = "button btn btn-success" })
        <table class="table table-striped">
        <thead>
        <tr>
            <th>
                Person name
            </th>
            <th>
                Person email
            </th>
            <th>
                Facility name
            </th>
            <th>
                Category Name
            </th>
            <th>
                Date/time 
            </th>
       <!-- <th>
                Size of facility
            </th>
            <th>
                Industrial classification
            </th>
            <th>
                Another Product classification
            </th>
            <th>
                Additional Product classification
            </th> -->
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FacilityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OccurredAt)
                </td>
            <!--    <td>
                    @Html.DisplayFor(modelItem => item.User.SizeOfFacilityValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.IndustrialClassificationValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.AnotherProductClassificationValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.AdditionalProductClassificationValue)
                </td> -->
            </tr>
        }
        </tbody>
        </table>
        }
        @Html.ActionLink("Back to List", "Index", null, new { @class = "button btn" })
        </div>
    </div>
</div>