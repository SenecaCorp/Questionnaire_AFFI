@model Questionnaire.Entities.UserPurchase


@{
    ViewBag.Title = "Add User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/bootstrap-datepicker.js")" type="text/javascript"></script>



<div class="container-fluid">
    <div class="row">
        <div class="span10">
            <legend>Add New User</legend>
        @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)

       @* @Html.HiddenFor(model => model.ActivatorsEmail)*@
        <fieldset>

        <h5>Name</h5>

        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <h5>Email</h5>

        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <h5>Additional Email</h5>

        <div class="editor-field">
            @Html.EditorFor(model => model.ActivatorsEmail)
            @Html.ValidationMessageFor(model => model.ActivatorsEmail)
        </div>

        <h5>Password</h5>

        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>


        <h5>Facility Name</h5>

        <div class="editor-field">
            @Html.EditorFor(model => model.FacilityName)
            @Html.ValidationMessageFor(model => model.FacilityName)
        </div>

        <h5>User Expiration Date</h5>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserExpirationDate)
            @Html.ValidationMessageFor(model => model.UserExpirationDate)
        </div>

        <h5>Administrator</h5>
        <div class="editor-field">
            @Html.CheckBoxFor(model => model.IsAdmin, new { type = "checkbox" }) Check to make Admin
        </div>

        <br />

        <div class="row-fluid">
            <div class="span3">
                <input type="submit" value="Create" class="btn btn-success"/>
                <a class="btn" href="./">Back to list</a>
            </div>
        </div>

    </fieldset>
}
</div>
</div>
</div>