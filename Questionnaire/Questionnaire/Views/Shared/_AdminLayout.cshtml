<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

    <link rel="shortcut icon" href="/Content/img/favicon.png" type="image/x-icon" />
    <link href="@Url.Content("~/Content/css/bootstrap-full/bootstrap.min.css")" rel="stylesheet" type="text/css"/>
    <style type="text/css">
      body {
        padding-top: 60px;
      }
      
      .field-validation-error {
        color:Red;
        }

      
    </style>
    <link href="@Url.Content("~/Content/css/bootstrap-full/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/css/bootstrap-additions.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/css/print.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/css/datepicker.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/css/chosen.css")" rel="stylesheet" type="text/css"/>

    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jQuery-1.11.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-migrate-1.2.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/chosen.jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/questionnaire.validate.js")" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <span class="brand">Questionnaire</span>
          <div class="nav-collapse">
            <ul class="nav">
              <li @if (ViewBag.Title == "Users") { @Html.Raw("class=\"active\"")}>@Html.ActionLink("Users", "Index", "Admin", new { }, new { })</li>
              <li @if (ViewBag.Title == "Vendors")
                  { @Html.Raw("class=\"active\"")}>@Html.ActionLink("Vendors", "Index", "AdminVendors", new { }, new { })</li>
              <li @if (ViewBag.Title == "Vendors By Categories")
                  { @Html.Raw("class=\"active\"")}>@Html.ActionLink("Vendors By Categories", "Index", "AdminVendorCategory", new { }, new { })</li>
              <li @if (ViewBag.Title == "Questions")
                  { @Html.Raw("class=\"active\"")}>@Html.ActionLink("Questions", "Index", "AdminQuestions", new { }, new { })</li>
              <li @if (ViewBag.Title == "Categories")
                  { @Html.Raw("class=\"active\"")}>@Html.ActionLink("Categories", "Index", "AdminCategories", new { }, new { })</li>
            </ul>
            @Html.ActionLink("Log Out", "SignOut", "SignIn", new {}, new { @class = "btn pull-right", @style = "margin-left: 10px" })
            <span class="navbar-text pull-right">Logged in as @User.Identity.Name</span>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    @RenderBody()
    <script src="@Url.Content("~/Scripts/bootstrap.full.min.js")" type="text/javascript"></script>
</body>
</html>
