@using QuestionnairePrototype.Infrastructure
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,300,400,600,700' rel='stylesheet' type='text/css' />

    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css"/>
    <style type="text/css">
      body {
        padding-top: 30px;
      }
    </style>
    <link href="@Url.Content("~/Content/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/css/bootstrap-additions.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/css/questionnaire.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/css/print.css")" rel="stylesheet" type="text/css"/>

    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.8.1.js")" type="text/javascript"></script>
    @RenderSection("JS", required: false)
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <span class="brand">FSMA Self-Assessment</span>
                <div class="pull-right">
                    <span class="navbar-text navbar-user">Logged in as @User.Identity.Name</span>
                    @Html.ActionLink("Log Out", "SignOut", "SignIn", new {}, new { @class = "btn navbar-logout"})
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
</body>
</html>
